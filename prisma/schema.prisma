// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  accounts      Account[]
  sessions      Session[]
  stories       Story[]
  characters    Character[]
  subscription  Subscription?
  writingStyle  WritingStyle?
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Story {
  id          String   @id @default(cuid())
  title       String
  content     String   @db.Text
  wordCount   Int      @default(0)
  published   Boolean  @default(false)
  views       Int      @default(0)
  likes       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  authorId    String
  author      User     @relation(fields: [authorId], references: [id])
  characters  Character[]
  coverImageUrl String?
  
  // === NARRACI√ìN INTERACTIVA MULTIRUTA ===
  isInteractive  Boolean      @default(false)
  storyNodes     StoryNode[]
}

model Character {
  id          String   @id @default(cuid())
  name        String
  backstory   String   @db.Text
  traits      String[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  authorId    String
  author      User     @relation(fields: [authorId], references: [id])
  stories     Story[]
  
  // === INTERVENCI√ìN IA - PERSONALIDAD ===
  personality     Json?    // { "temperament": "passionate", "speakingStyle": "formal", "humor": "sarcastic" }
  voiceTone       String   @default("neutral")  // "friendly", "serious", "playful", "dramatic", "mysterious"
  emotionalRange  String[] @default([])  // ["anger", "joy", "fear", "curiosity"]
  
  // === TRIGGERS DE INTERVENCI√ìN ===
  triggerTopics   String[] @default([])  // Temas que activan al personaje: ["love", "danger", "betrayal"]
  triggerWords    String[] @default([])  // Palabras espec√≠ficas: ["muerte", "traici√≥n", "secreto"]
  
  // === CONFIGURACI√ìN DE INTERVENCI√ìN ===
  interventionEnabled  Boolean  @default(true)
  interventionStyle    String   @default("suggestion") // "suggestion", "complaint", "question", "encouragement"
  interventionFrequency String  @default("medium")     // "low", "medium", "high"
  
  // === HISTORIAL ===
  lastIntervention    DateTime?
  totalInterventions  Int      @default(0)
}

model Subscription {
  id            String   @id @default(cuid())
  userId        String   @unique
  user          User     @relation(fields: [userId], references: [id])
  stripeCustomerId       String?   @unique
  stripeSubscriptionId   String?   @unique
  stripePriceId         String?
  stripeCurrentPeriodEnd DateTime?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

// ============================================
// WRITING STYLE ANALYSIS MODELS
// ============================================

model WritingStyle {
  id              String   @id @default(cuid())
  userId          String   @unique
  
  // === AN√ÅLISIS B√ÅSICO ===
  narrativeVoice  String   @default("third-person")  // "first-person", "third-person-limited", "third-person-omniscient"
  preferredTense  String   @default("past")          // "past", "present", "mixed"
  
  // === M√âTRICAS DE ESTILO ===
  avgSentenceLength    Float    @default(0)  // Promedio de palabras por oraci√≥n
  avgParagraphLength   Float    @default(0)  // Promedio de oraciones por p√°rrafo
  vocabularyLevel      String   @default("intermediate") // "basic", "intermediate", "advanced", "literary"
  
  // === TONO Y VOZ ===
  dominantTones        String[] // ["melancholic", "poetic", "hopeful", "dark"]
  writingPace          String   @default("moderate")     // "fast", "moderate", "slow", "variable"
  descriptiveDensity   String   @default("moderate")     // "sparse", "moderate", "rich", "very-rich"
  
  // === PATRONES √öNICOS ===
  signaturePhrases     Json     @default("{}")  // { "como si": 23, "sin embargo": 15 }
  favoriteWords        Json     @default("{}")  // { "silencio": 45, "sombra": 32 }
  avoidedWords         String[] @default([])    // ["muy", "cosa", "hacer"]
  
  // === ESTILO DE DI√ÅLOGO ===
  dialogueStyle        String   @default("natural")  // "natural", "formal", "dialectal", "minimalist"
  dialogueFrequency    Float    @default(0)     // % del texto que es di√°logo (0-100)
  
  // === COMPARACIONES ===
  similarAuthors       Json     @default("[]")  // [{ "name": "Garc√≠a M√°rquez", "similarity": 0.72 }]
  literaryMovement     String?                  // "realismo m√°gico", "modernismo", etc.
  
  // === METADATA ===
  analyzedStories      Int      @default(0)
  totalWordsAnalyzed   Int      @default(0)
  confidence           Float    @default(0)     // 0-1, qu√© tan confiable es el an√°lisis
  lastAnalyzed         DateTime @updatedAt
  isActive             Boolean  @default(true)
  
  // === RELACIONES ===
  user                 User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  styleExamples        StyleExample[]
  
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt
  
  @@index([userId])
}

model StyleExample {
  id              String   @id @default(cuid())
  styleId         String
  
  // === CONTENIDO DEL EJEMPLO ===
  text            String   @db.Text    // P√°rrafo representativo del estilo
  context         String?              // De qu√© historia/cap√≠tulo viene
  storyTitle      String?              // T√≠tulo de la historia original
  
  // === CLASIFICACI√ìN ===
  exampleType     ExampleType          // Por qu√© es representativo este ejemplo
  
  // === METADATA ===
  wordCount       Int      @default(0)
  relevanceScore  Float    @default(0) // 0-1, qu√© tan representativo es
  
  // === RELACIONES ===
  style           WritingStyle @relation(fields: [styleId], references: [id], onDelete: Cascade)
  
  createdAt       DateTime @default(now())
  
  @@index([styleId])
  @@index([exampleType])
}

enum ExampleType {
  NARRATIVE_VOICE      // Ejemplo de voz narrativa caracter√≠stica
  DESCRIPTIVE          // Ejemplo de estilo descriptivo
  DIALOGUE             // Ejemplo de di√°logo caracter√≠stico
  EMOTIONAL            // Ejemplo de tono emocional
  SIGNATURE_STYLE      // Ejemplo de estilo √∫nico/firma del autor
  OPENING              // Ejemplo de c√≥mo abre historias
  TRANSITION           // Ejemplo de transiciones entre escenas
}

// ============================================
// NARRACI√ìN INTERACTIVA MULTIRUTA
// ============================================

model StoryNode {
  id          String   @id @default(cuid())
  storyId     String
  story       Story    @relation(fields: [storyId], references: [id], onDelete: Cascade)
  
  // === CONTENIDO DEL NODO ===
  title       String            // "Cap√≠tulo 1" o "El bosque oscuro"
  content     String   @db.Text // Contenido HTML del fragmento
  nodeType    NodeType @default(CONTENT)
  
  // === POSICI√ìN EN EL √ÅRBOL ===
  position    Int      @default(0)  // Orden para nodos ra√≠z
  isStart     Boolean  @default(false)
  isEnding    Boolean  @default(false)
  
  // === RELACIONES ===
  outgoingChoices  Choice[]  @relation("FromNode")
  incomingChoices  Choice[]  @relation("ToNode")
  
  // === METADATA ===
  wordCount   Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([storyId])
  @@index([isStart])
}

model Choice {
  id          String    @id @default(cuid())
  
  // === CONEXI√ìN ===
  fromNodeId  String
  fromNode    StoryNode @relation("FromNode", fields: [fromNodeId], references: [id], onDelete: Cascade)
  toNodeId    String
  toNode      StoryNode @relation("ToNode", fields: [toNodeId], references: [id], onDelete: Cascade)
  
  // === CONTENIDO DE LA DECISI√ìN ===
  text        String    // "Entrar al bosque" o "Escapar corriendo"
  emoji       String?   // "üå≤" o "üèÉ"
  position    Int       @default(0) // Orden de las opciones
  
  // === ESTAD√çSTICAS ===
  timesChosen Int       @default(0)
  
  createdAt   DateTime  @default(now())
  
  @@index([fromNodeId])
  @@index([toNodeId])
}

enum NodeType {
  CONTENT     // Nodo normal con texto
  DECISION    // Nodo que presenta opciones (deprecated - usar outgoingChoices)
  ENDING      // Final de una ruta
} 